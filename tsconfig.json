{
  "compilerOptions": {

    "resolveJsonModule": true,

    "target": "es2020",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,

    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@services/*": ["./services/*"],
      "@structures/*": ["./structures/*"],
      "@utils/*": ["./utils/*"]
    }
  }
}